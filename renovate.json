{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "deploy/**/Chart.yaml"
      ],
      "matchManagers": [
        "helm"
      ]
    },
    {
      "matchFileNames": [
        "deploy/**/*.yaml"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "extractVersion": "^version:\\s*(?<version>\\S+)$"
    }
  ]
}
